{
  "openapi": "3.1.0",
  "info": {
    "title": "CyberBlue SOC API",
    "version": "1.0.0",
    "description": "Security Operations Center API for tool management and monitoring"
  },
  "servers": [
    {
      "url": "https://api.soc.local",
      "description": "Production server"
    },
    {
      "url": "http://localhost:8000",
      "description": "Local development server"
    }
  ],
  "security": [
    {
      "bearerAuth": []
    }
  ],
  "paths": {
    "/api/tools": {
      "get": {
        "summary": "List all SOC tools",
        "description": "Retrieve a list of all configured SOC tools with their current status",
        "tags": ["tools"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Tool"
                  }
                }
              }
            }
          },
          "401": {
            "description": "Unauthorized - Invalid or missing JWT token"
          }
        }
      }
    },
    "/api/tools/{tool_id}": {
      "get": {
        "summary": "Get specific tool details",
        "description": "Retrieve detailed information about a specific SOC tool",
        "tags": ["tools"],
        "parameters": [
          {
            "name": "tool_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Tool ID"
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Tool"
                }
              }
            }
          },
          "404": {
            "description": "Tool not found"
          }
        }
      }
    },
    "/api/actions/{tool_id}/{operation}": {
      "put": {
        "summary": "Perform tool action",
        "description": "Start, stop, or restart a SOC tool (Admin only)",
        "tags": ["actions"],
        "parameters": [
          {
            "name": "tool_id",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            },
            "description": "Tool ID"
          },
          {
            "name": "operation",
            "in": "path",
            "required": true,
            "schema": {
              "enum": ["start", "stop", "restart"],
              "type": "string"
            },
            "description": "Operation to perform"
          }
        ],
        "responses": {
          "200": {
            "description": "Action performed successfully",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string"
                    },
                    "status": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          },
          "403": {
            "description": "Forbidden - Insufficient permissions"
          },
          "429": {
            "description": "Too Many Requests - Rate limit exceeded"
          }
        }
      }
    },
    "/api/metrics": {
      "get": {
        "summary": "Get system metrics",
        "description": "Retrieve comprehensive system metrics and tool status",
        "tags": ["metrics"],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/SystemMetrics"
                }
              }
            }
          }
        }
      }
    },
    "/api/audit-logs": {
      "get": {
        "summary": "Get audit logs",
        "description": "Retrieve paginated audit logs with filtering",
        "tags": ["audit"],
        "parameters": [
          {
            "name": "page",
            "in": "query",
            "schema": {
              "type": "integer",
              "default": 1
            }
          },
          {
            "name": "search",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "action",
            "in": "query",
            "schema": {
              "type": "string"
            }
          },
          {
            "name": "user",
            "in": "query",
            "schema": {
              "type": "string"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Successful response",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/AuditLogsResponse"
                }
              }
            }
          }
        }
      }
    },
    "/api/health": {
      "get": {
        "summary": "Health check",
        "description": "Check API health status",
        "tags": ["health"],
        "responses": {
          "200": {
            "description": "API is healthy",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "healthy"
                    }
                  }
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT",
        "description": "JWT token from Keycloak authentication"
      }
    },
    "schemas": {
      "Tool": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer"
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["stopped", "running", "restarting"]
          }
        }
      },
      "SystemMetrics": {
        "type": "object",
        "properties": {
          "tools_status": {
            "type": "object",
            "additionalProperties": {
              "type": "string"
            }
          },
          "system_health": {
            "type": "object",
            "properties": {
              "overall": {
                "type": "string",
                "enum": ["healthy", "warning", "critical"]
              },
              "uptime": {
                "type": "string"
              },
              "last_backup": {
                "type": "string"
              }
            }
          },
          "recent_metrics": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "timestamp": {
                  "type": "string"
                },
                "cpu_usage": {
                  "type": "number"
                },
                "memory_usage": {
                  "type": "number"
                },
                "alerts_count": {
                  "type": "integer"
                }
              }
            }
          },
          "incidents_count": {
            "type": "integer"
          }
        }
      },
      "AuditLogsResponse": {
        "type": "object",
        "properties": {
          "logs": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "id": {
                  "type": "integer"
                },
                "user_sub": {
                  "type": "string"
                },
                "action": {
                  "type": "string"
                },
                "resource": {
                  "type": "string"
                },
                "details": {
                  "type": "string"
                },
                "created_at": {
                  "type": "string"
                }
              }
            }
          },
          "total_pages": {
            "type": "integer"
          },
          "current_page": {
            "type": "integer"
          },
          "total_count": {
            "type": "integer"
          }
        }
      }
    }
  }
}